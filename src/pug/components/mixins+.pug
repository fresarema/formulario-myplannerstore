//- ::: Formulario / Botón de Envío ::: -// ---------------------------------------------------------------------------------------->

mixin form_brochure_submit()

    <script type="text/javascript">var submitted = false;</script>
    <iframe name="hidden_iframe_1" id="hidden_iframe_1" style="display:none;" onload="if(submitted)  { var element = document.getElementById('form_program_submit');  element.classList.toggle('green') ; element.classList.toggle('disableClick') ; element.innerHTML = 'Solicitud Enviada';  Swal.fire({position: 'center',icon: 'success',title: 'Solicitud Envíada, Instrucciones en tu correo electrónico',showConfirmButton: false, timer: 3750 }) ; setTimeout(function(){ window.location='/'}, 4500) }"></iframe>


//- ::: Formulario  ::: -// ---------------------------------------------------------------------------------------->

mixin form_personalized_attention()
    +form_brochure_submit()

    //- Formulario
    <form data-lang="es" id="form_program" action="https://docs.google.com/forms/u/2/d/e/1FAIpQLSeQ4uZQHM2DWAuNz6qdDTuspBrHi4uqHjQBwx_dEVImcblZKg/formResponse" class="slides-form wide left" method="post" target="hidden_iframe_1" onsubmit="submitted=true;">

        <ul class="flex noSpaces">
            <li class="col-12-12 form-55-input-1">

                //- Nombre Completo
                <div class="label"><label class="left opacity-5" for="first_name_es"> <span class="material-icons relative" style="bottom: -6px">account_circle</span> Nombre Completo</label></div>
                <input class="rounded wide" id="first_name_es" type="text" name="entry.798044556" placeholder="Ingresa tu Nombre" pattern="^\[a-zA-ZÑñ]{3,}$" title="Ingrese un Nombre Válido" required/>
            </li>



            <li class="col-12-12 form-55-input-1">

                //- Correo Electrónico
                <div class="label"><label class="opacity-5" for="email_es"><span class="material-icons relative" style="bottom: -6px">email</span> Correo Electrónico</label></div>
                <input class="rounded wide" id="email_es" type="email" name="entry.1368177520" placeholder="Ingresa tu Correo Electrónico" pattern="^\[^@]+@[^@]+\.[a-zA-Z]{2,}$" title="Ingresa un Correo Válido" required/>

            </li>



            <li class="col-12-12 form-55-input-1">

                //- WhatsApp
                <div class="label"><label class="left opacity-5" for="mobile_phone_es"> <span class="material-icons relative" style="bottom: -7px">smartphone</span> Contacto ( +569 1234 1234 )</label></div>
                <input class="rounded wide" id="mobile_phone_es" type="text" name="entry.2074230321" placeholder="Ingrese Móvil" value="+569" pattern="^\+[0-9]{10,13}$" title="Ingresar WhatsApp Válido, Ejemplo: +569 1234 1234 o del formato de tu país" required/>


            </li>


            <li class="col-12-12 form-55-input-1">

                <div class="label"><label class="opacity-5" for="program_name_es"><span class="material-icons relative" style="bottom: -6px">description</span> Tipo de agenda</label></div>

                //- Nombre del Servicio
                <select class="rounded wide" name="entry.1573176413" id="program_name_es">

                    <option value="General A4" selected>Agenda General A4</option>
                    <option value="Study Planner" selected>Agenda Study Planner</option>
                    <option value="Personalizada A4" selected>Agenda Personalizada A4</option>

                </select>


            </li>


            //- Brochure ID
            <li class="col-12-12 form-55-input-1 none">

                <div class="label"><label class="opacity-5" for="brochure_id_es"><span class="material-icons relative" style="bottom: -6px">fingerprint</span> Brochure ID</label></div>

                <select class="rounded wide" name="entry.285547947" id="brochure_id_es">
                    <option value="ID_BROCHURE" selected> ID_BROCHURE </option>
                </select>

            </li>


            //- Labels IDs
            <li class="col-12-12 form-55-input-1 none">

                <div class="label"><label class="opacity-5" for="labels_ids"><span class="material-icons relative" style="bottom: -6px">record_voice_over</span> Labels IDs</label></div>

                <input class="rounded wide" id="labels_ids" type="text" name="entry.2793784" value="LABELS_IDS" required/>


            </li>

            
        </ul>

        <button type="submit" class="button wide blue rounded cropBottom margin-top-2" id="form_program_submit">Enviar Reserva</button>


    </form>



